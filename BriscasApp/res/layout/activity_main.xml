<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_toRightOf="@+id/editText1"
        android:text="OK" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="42dp"
        android:text="Player 1 Cards" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/button1"
        android:text="Player 2 Cards" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView02"
        android:layout_alignBottom="@+id/TextView02"
        android:layout_alignLeft="@+id/TextView01"
        android:text="Player 4 Cards" />

    <TextView
        android:id="@+id/CardsRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="TextView" />

    <TextView
        android:id="@+id/Player4Card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Player4Card3"
        android:layout_alignLeft="@+id/Player4Card3"
        android:text="TextView" />

    <TextView
        android:id="@+id/Player4Card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/Player3Card2"
        android:text="TextView" />

    <TextView
        android:id="@+id/Player4Card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Player3Card1"
        android:layout_alignBottom="@+id/Player3Card1"
        android:layout_alignLeft="@+id/TextView03"
        android:text="TextView" />

    <TextView
        android:id="@+id/BottomCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/TextView02"
        android:text="TextView" />

    <RadioGroup
        android1:id="@+id/RadioPlayer1Cards"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView2"
        android1:layout_below="@+id/TextView01" >

        <RadioButton
            android1:id="@+id/RadioPlayer1Card1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:height="5dp"
            android1:text="RadioButton" />

        <RadioButton
            android1:id="@+id/RadioPlayer1Card2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="RadioButton" />

        <RadioButton
            android1:id="@+id/RadioPlayer1Card3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="RadioButton" />
    </RadioGroup>

    <TextView
        android1:id="@+id/TextView02"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/Player4Card1"
        android1:layout_alignLeft="@+id/RadioPlayer1Cards"
        android1:text="Player 3 Cards" />

    <RadioGroup
        android1:id="@+id/RadioPlayer2Cards"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/TextView01"
        android1:layout_alignTop="@+id/RadioPlayer1Cards" >

        <RadioButton
            android1:id="@+id/RadioPlayer2Card1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="RadioButton" />

        <RadioButton
            android1:id="@+id/RadioPlayer2Card2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="RadioButton" />

        <RadioButton
            android1:id="@+id/RadioPlayer2Card3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="RadioButton" />
    </RadioGroup>

    <TextView
        android1:id="@+id/textView4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/textView3"
        android1:layout_marginTop="23dp"
        android1:text="Cards Remaining: " />

    <Button
        android1:id="@+id/playButton"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/BottomCard"
        android1:layout_below="@+id/editText1"
        android1:text="Play!"
        android:onClick="playClick" />

    <TextView
        android1:id="@+id/textView5"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/BottomCard"
        android1:layout_alignLeft="@+id/textView4"
        android1:layout_marginBottom="20dp"
        android1:text="Team 1: " />

    <TextView
        android1:id="@+id/textView6"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView5"
        android1:layout_alignBottom="@+id/textView5"
        android1:layout_alignLeft="@+id/Player4Card3"
        android1:text="Team 2: " />

    <TextView
        android1:id="@+id/Player1Priority"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/TextView01"
        android1:layout_alignLeft="@+id/textView2"
        android1:text="Small Text"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android1:id="@+id/Player2Priority"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBottom="@+id/Player1Priority"
        android1:layout_alignLeft="@+id/TextView01"
        android1:text="Small Text"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android1:id="@+id/textView7"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView4"
        android1:layout_alignBottom="@+id/textView4"
        android1:layout_alignLeft="@+id/textView6"
        android1:text="Hands Played"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android1:id="@+id/numHandsTxtView"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView7"
        android1:layout_below="@+id/textView7"
        android1:text="Small Text"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android1:id="@+id/playAgain"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/playButton"
        android1:layout_alignBottom="@+id/playButton"
        android1:layout_toRightOf="@+id/textView2"
        android1:text="Play Again!" 
        android:onClick="playAgainClick" />

    <EditText
        android1:id="@+id/editText1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:layout_marginLeft="18dp"
        android1:ems="10"
        android1:inputType="number" />

    <TextView
        android1:id="@+id/Player3Card1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignRight="@+id/textView3"
        android1:layout_centerVertical="true"
        android1:text="TextView" />

    <TextView
        android1:id="@+id/Player3Card2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/TextView02"
        android1:layout_below="@+id/Player3Card1"
        android1:text="TextView" />

    <TextView
        android1:id="@+id/Player3Card3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/Player4Card3"
        android1:layout_alignBottom="@+id/Player4Card3"
        android1:layout_alignLeft="@+id/Player3Card2"
        android1:text="TextView" />

    <Button
        android1:id="@+id/switchBottom"
        style="?android:attr/buttonStyleSmall"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignTop="@+id/RadioPlayer2Cards"
        android1:layout_toRightOf="@+id/RadioPlayer1Cards"
        android1:text="Button"
        android:onClick="switchClick" />

    <TextView
        android1:id="@+id/textView3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/Player3Card3"
        android1:layout_marginTop="64dp"
        android1:text="Bottom Card" />

    <TextView
        android1:id="@+id/team2Points"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView6"
        android1:layout_alignBottom="@+id/textView6"
        android1:layout_toRightOf="@+id/textView6"
        android1:text="TextView" />

    <TextView
        android1:id="@+id/team1Points"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/textView5"
        android1:layout_alignBottom="@+id/textView5"
        android1:layout_alignRight="@+id/TextView02"
        android1:text="TextView" />

</RelativeLayout>